<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="50.1dp"
                android:fontFamily="sans-serif-medium"
                android:text="Cadastrar cartão"
                android:textColor="@color/text_gray"
                android:textSize="17.1sp" />

            <View
                android:id="@+id/register_card_photo_container"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="47dp"
                android:src="@drawable/camera"/>

            <ImageView
                android:id="@+id/register_card_photo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="52dp"
                android:src="@drawable/camera"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/register_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/light_gray"
            android:hint="Número do cartão"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:inputType="number"/>

        <EditText
            android:id="@+id/register_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="14sp"
            android:textColorHint="@color/light_gray"
            android:hint="Nome do titular do cartão"
            android:maxLines="1"
            android:inputType="text"/>

        <EditText
            android:id="@+id/register_card_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textAlignment="center"
            android:textSize="14sp"
            android:inputType="number"
            android:textColorHint="@color/light_gray"
            android:hint="Data de vencimento" />

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">

            <EditText
                android:id="@+id/register_card_security_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:textSize="14sp"
                android:maxLength="3"
                android:textColorHint="@color/light_gray"
                android:textAlignment="center"
                android:inputType="number"/>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/card"
                android:tint="#d5d5d5" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/register_card_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17.1dp"
        android:text="Pagar"
        android:textAllCaps="false"
        android:textSize="17.1sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"/>



</RelativeLayout>
